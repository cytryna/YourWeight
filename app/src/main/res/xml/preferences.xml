<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <SwitchPreference
        android:key="pref_login"
        android:defaultValue="true"
        android:summaryOff="Bez logowania"
        android:summaryOn="Logowanie"
        android:switchTextOff="off"
        android:switchTextOn="on"
        android:title="Logowanie" />

    <ListPreference
        android:key="unit_system"
        android:defaultValue="metric"
        android:dialogTitle="System metryczny"
        android:entries="@array/unit_system"
        android:entryValues="@array/unit_system_key"
        android:summary="Wybierz system metryczny"
        android:title="System metryczny" />

</PreferenceScreen>